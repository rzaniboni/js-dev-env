# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Set default charset
charset = utf-8

# 2 space indentation
ident_style = space
ident_size = 2

trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

